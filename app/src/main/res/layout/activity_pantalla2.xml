<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraund"
    tools:context=".Pantalla2"
    android:id="@+id/main">

    <!-- Title -->
<TextView
android:id="@+id/title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Smart Expense"
android:textColor="#9530C5"
android:textSize="24sp"
android:layout_centerHorizontal="true"
android:layout_marginTop="80dp"
android:fontFamily="@font/nicomoji"/>

    <!-- Start Section Title -->
<TextView
android:id="@+id/startSectionTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Start Section"
android:textColor="@android:color/white"
android:textSize="18sp"
android:layout_below="@id/title"
android:layout_centerHorizontal="true"
android:layout_marginTop="45dp"
android:fontFamily="@font/nicomoji"/>

    <!-- Instruction Text -->
<TextView
android:id="@+id/instructionText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Enter your account to sign up for this app"
android:textColor="@android:color/white"
android:textSize="12sp"
android:layout_below="@id/startSectionTitle"
android:layout_centerHorizontal="true"
android:layout_marginTop="20dp"
android:fontFamily="@font/nicomoji"/>

    <!-- Nickname EditText -->
<EditText
android:id="@+id/nickname"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Nickname"
    android:gravity="center"
android:background="@drawable/edittext_border"
android:padding="10dp"
android:layout_below="@id/instructionText"
android:layout_marginTop="20dp"
android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:textColor="#828282"
    android:textColorHint="#828282"
    android:fontFamily="@font/nicomoji"/>

    <!-- Password EditText -->
<EditText
android:id="@+id/password"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Password"
android:inputType="textPassword"
    android:gravity="center"
android:background="@drawable/edittext_border"
android:padding="10dp"
android:layout_below="@id/nickname"
android:layout_marginTop="10dp"
android:layout_marginLeft="40dp"
android:layout_marginRight="40dp"
    android:textColor="#828282"
    android:textColorHint="#828282"
    android:fontFamily="@font/nicomoji"/>
    <Button
        android:id="@+id/accederButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceder"
        android:fontFamily="@font/nicomoji"
        android:textColor="#7F36AB"
        android:backgroundTint="#190923"
        android:layout_below="@id/orContinueWithText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"/>

    <!-- Or continue with Text -->
<TextView
android:id="@+id/orContinueWithText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="or continue with"
android:textColor="@android:color/white"
android:textSize="14sp"
android:layout_below="@id/password"
android:layout_centerHorizontal="true"
android:layout_marginTop="100dp"
android:fontFamily="@font/nicomoji"/>

    <!-- "Aun no tengo" Button -->
<Button
android:id="@+id/registerButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="AÃºn no tengo"
    android:fontFamily="@font/nicomoji"
    android:textColor="#7F36AB"
    android:backgroundTint="#190923"
android:layout_below="@id/orContinueWithText"
android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"/>

    <!-- Social Media Buttons -->
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/registerButton"
android:layout_centerHorizontal="true"
android:layout_marginTop="110dp"
android:orientation="horizontal">

<ImageView
    android:id="@+id/whatsappIcon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_whatsap"
    android:layout_marginRight="20dp"/>

<ImageView
    android:id="@+id/githubIcon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_github"
    android:layout_marginRight="20dp"/>

<ImageView
    android:id="@+id/twitterIcon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_twiter"
    android:layout_marginRight="20dp"/>
</LinearLayout>

<TextView
android:id="@+id/visitText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="ALSO YOU CAN VISIT!!"
android:textColor="#9530C5"
android:textSize="14sp"
android:layout_centerHorizontal="true"
android:layout_marginTop="570dp"
android:fontFamily="@font/nicomoji"/>

    </RelativeLayout>
