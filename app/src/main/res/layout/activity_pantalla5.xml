<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/backgraund"
    tools:context=".Pantalla4">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Expense"
        android:textColor="#9530C5"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nicomoji"/>

    <TextView
        android:id="@+id/IngresoP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingreso mensual"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_below="@id/title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nicomoji"/>

    <!-- Nombres EditText -->
    <EditText
        android:id="@+id/Alias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:background="@drawable/edittext_border"
        android:padding="10dp"
        android:gravity="center"
        android:layout_below="@id/IngresoP"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#828282"
        android:textColorHint="#828282"
        android:fontFamily="@font/nicomoji"/>

    <TextView
        android:id="@+id/IngresoT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Ingreso"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_below="@id/Alias"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nicomoji"/>
    <!-- Apellidos EditText -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/IngresoT"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <Button
        android:id="@+id/dolarB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:gravity="center"
        android:layout_below="@id/IngresoT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/nicomoji"
        android:textColor="#7F36AB"
        android:backgroundTint="#190923"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/euroB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¬"
        android:gravity="center"
        android:layout_below="@id/IngresoT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/nicomoji"
        android:textColor="#7F36AB"
        android:backgroundTint="#190923"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/solesB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/."
        android:gravity="center"
        android:layout_below="@id/IngresoT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/nicomoji"
        android:textColor="#7F36AB"
        android:backgroundTint="#190923"
        android:layout_marginRight="20dp"/>
</LinearLayout>


    <!-- Siguiente Button -->
    <Button
        android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:gravity="center"
        android:layout_below="@id/IngresoT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/nicomoji"
        android:textColor="#7F36AB"
        android:backgroundTint="#190923"/>
</RelativeLayout>