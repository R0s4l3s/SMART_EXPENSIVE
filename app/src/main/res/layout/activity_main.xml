<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/backgraund"
    tools:context=".MainActivity">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nicomoji"
        android:text="WELCOME TO THE"
        android:textColor="#9530C5"
        android:textSize="24sp" />

    <!-- Smart Expense Text -->
    <TextView
        android:id="@+id/smartExpenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nicomoji"
        android:text="Smart Expense"
        android:textColor="#9530C5"
        android:textSize="24sp" />

    <!-- Phone Image -->
    <ImageView
        android:id="@+id/phoneImage"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:src="@drawable/backgraund"
        android:layout_centerInParent="true"/>

    <!-- Enter Button -->
    <Button
        android:id="@+id/IngresarP1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:fontFamily="@font/nicomoji"
        android:textColor="#7F36AB"
        android:backgroundTint="#190923"
        android:layout_below="@id/phoneImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>